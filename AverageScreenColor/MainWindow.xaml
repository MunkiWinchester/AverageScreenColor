<Window x:Class="AverageScreenColor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:AverageScreenColor="clr-namespace:AverageScreenColor"
        mc:Ignorable="d"
        Icon="favicon.ico"
        Title="MainWindow" Height="250" Width="500">
    <Window.DataContext>
        <AverageScreenColor:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Margin="10" Grid.Column="0" Grid.Row="0" Content="On" Command="{Binding LoadConfigCommand}"/>
        <Rectangle Margin="10" Grid.Column="0" Grid.Row="1" Fill="{Binding DominantBrush}" />
        <Image Margin="10" Grid.Column="1" Grid.Row="1" Source="{Binding BitmapImage}" />
    </Grid>
</Window>
